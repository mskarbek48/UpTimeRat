{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container mx-auto  h-screen flex items-center justify-center flex-col">
        <div class="w-1/3 m-auto">

            <form method="post">

            <div class="flex-row flex items-center justify-center gap-5 mb-10">
                <div>
                    <img src="/assets/img/logo-rat.png" style="width: 64px; height: auto;">
                </div>
                <div>
                    <h6 class="text-white font-bold text-2xl">UpTimeRat - Login</h6>
                    <p class="text-slate-300 text-md">Simple monitoring solution for your services.</p>
                </div>
            </div>

            {% if error %}
                <div class="text-red-400 text-sm mb-5">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="flex-col flex mb-3">
                <label for="inputUsername" class="text-slate-300 text-sm">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                       class="outline-none border text-white ps-2 pe-2 pt-1 pb-1 border-slate-600 bg-slate-900 rounded-lg" autocomplete="username" required autofocus>
            </div>
            <div class="flex-col flex mb-5">
                <label for="inputPassword" class="text-slate-300 text-sm">Password</label>
                <input type="password" name="password" id="inputPassword"
                   class="outline-none border text-white ps-2 pe-2 pt-1 pb-1 border-slate-600 bg-slate-900 rounded-lg" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <button type="submit"
            class="bg-indigo-500 text-white block text-sm font-semibold w-full p-1 rounded-lg hover:bg-indigo-600"
            >Log in</button>
            </form>
        </div>
    </div>



    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
