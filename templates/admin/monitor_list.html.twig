{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container mx-auto">
        <h1 class="text-white text-2xl font-bold mb-5">Monitor list</h1>

        <div class="text-right">
            <a class="block text-xs text-white font-bold bg-indigo-600 ms-auto w-fit mb-3 p-2 rounded-lg hover:bg-indigo-500" href="/admin/monitor/new">Add new monitor</a>
        </div>



    <div class="grid xxl:grid-cols-6 lg:grid-cols-4 gap-4 justify-between">
        {% for monitor in monitors %}
            <div class="col-span-1">
                <div class="p-5 bg-slate-800 rounded-lg mb-3 text-center">
                    <h2 class="text-white font-bold mb-3">{{ monitor.name }}</h2>
                    <div class="flex items-center justify-center mb-2">
                        <span class="text-slate-400 me-2">Status: </span>{{ monitorStatus(monitor)|raw }}
                    </div>
                    <div class=" flex flex-row gap-2 justify-center mb-2">
                        <a href="/monitor/{{ monitor.id }}" title="TODO" class="bg-emerald-600 font-semibold text-white rounded-lg text-xs pt-1 pb-1 ps-2 pe-2 ">View</a>
                        <a href="/admin/monitor/{{ monitor.id }}" title="TODO" class="bg-indigo-600 font-semibold text-white rounded-lg text-xs pt-1 pb-1 ps-2 pe-2 ">Edit</a>
                        <a href="#" class="bg-red-800 font-semibold text-red-200 rounded-lg text-xs pt-1 pb-1 ps-2 pe-2 delete-monitor" value="{{ monitor.id }}">Delete</a>
                    </div>
                    {% if monitor.getmonitorstatuses|first %}
                        <p class="text-slate-400 text-xs text-center">Last update: {{ monitor.getmonitorstatuses|first.date|date }}</p>
                    {% else %}
                        <p class="text-slate-400 text-xs text-center">Last update: Never</p>
                    {% endif %}

                </div>
            </div>
        {% endfor %}
    </div>



    </div>

    <script>
        $(".delete-monitor").on("click", function(){

            let monitorId = $(this).attr("value");

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                confirmButtonText: `Yes, delete it!`,
                denyButtonText: `No, cancel!`,
                showDenyButton: true,
                }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/api/monitor/delete/" + monitorId,
                        type: "DELETE",
                        success: function(){
                            $("#monitor_" + monitorId).remove();
                        }

                    })
                }

            });

        });
    </script>

{% endblock %}