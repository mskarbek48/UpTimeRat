{% extends 'admin/base.html.twig' %}

{% block content %}

    <div class="container mx-auto">
        <h1 class="text-white text-2xl font-bold mb-5">Status page list</h1>

        <div class="text-right">
            <a class="block text-xs text-white font-bold bg-indigo-600 ms-auto w-fit mb-3 p-2 rounded-lg hover:bg-indigo-500" href="/admin/statuspage/new">Add new status page</a>
        </div>

        <div class="grid xxl:grid-cols-6 lg:grid-cols-4 gap-4 justify-between">
            {% for page in pages %}
                <div class="col-span-1">
                    <div class="p-5 bg-slate-800 rounded-lg mb-3 text-center">
                        <h2 class="text-white font-bold mb-3">{{ page.name }}</h2>
                        <div class=" flex flex-row gap-2 justify-center mb-2">
                            <a href="/status/page/{{ page.id }}" class="bg-emerald-600 font-semibold text-white rounded-lg text-xs pt-1 pb-1 ps-2 pe-2">View</a>
                            <a href="/admin/statuspage/{{ page.id }}" class="bg-indigo-600 font-semibold text-white rounded-lg text-xs pt-1 pb-1 ps-2 pe-2">Edit</a>
                            <a href="#" class="bg-red-800 font-semibold text-red-200 rounded-lg text-xs pt-1 pb-1 ps-2 pe-2 delete-statuspage" value="{{ page.id }}">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}